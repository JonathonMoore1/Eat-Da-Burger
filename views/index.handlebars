<div class="container">
    
    <div class="row" style="font-family: 'Butcherman', cursive">

        <div class="col">
            <div class="float-left">
                <h2>Burger Menu</h2>
                <ul>
                    {{#each burgers}} {{#unless devoured}} {{> burgers/burgers-block devoured=false }} {{/unless}} {{/each}}
                </ul>
            </div>
        </div>

        <div class="col">
            <img class="rounded text-center mb-5" style="width: 100%; height: 18rem;" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSlcKNVlN7wtQ7Bzxq3e21U7-2clxeF-N0QGQRpl80z5fucg1cWDw">
        </div>

        <div class="col">
            <div class="float-right">
                <h2>Devoured</h2>
                <ul>
                    {{#each burgers}} {{#if devoured}} {{> burgers/burgers-block devoured=true }} {{/if}} {{/each}}
                </ul>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col"></div>
        <div class="card border-0 add-burger" style="width: 18rem;">
            <div class="card-body">
                <div class="form">
                    <div class="form-group">
                        <input type="input" class="form-control mb-2" id="burger-input" placeholder="Dolphin burger...">
                        <h5 class="card-text mt-1 mb-5">
                            Enter the burger you want to eat and hit "Submit"!
                        </h5>
                        <button class="btn btn-primary mt-2" type="submit" style="width: 100%">Submit</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>